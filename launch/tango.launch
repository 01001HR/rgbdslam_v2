<!-- This file demonstrates the use of SIFT features for online SLAM with a Kinect. 
     The openni driver is started from this file -->
<launch>
  <param name="/use_sim_time" value="false"/> 

  <node pkg="rgbdslam" type="rgbdslam" name="rgbdslam" cwd="node" required="true" output="screen"> 
    <!-- Input data settings-->
    <param name="config/topic_image_mono"              value="/tango/narrow/image_raw"/> <!--could also be color -->
    <param name="config/camera_info_topic"             value="/tango/narrow/camera_info"/> <!--could also be color -->
    <param name="config/topic_image_depth"             value="/tango/depth/image_raw"/>
    <param name="config/topic_points"                  value=""/> 
    <param name="config/cloud_creation_skip_step"      value="2"/>
    <param name="config/cloud_display_type"            value="GL_POINTS"/>
    <param name="config/visualization_skip_step"       value="4"/>
    <param name="config/gl_point_size"                 value="2"/>
    <param name="config/start_paused"                  value="false"/>
    <param name="config/observability_threshold"       value="-0.1"/>
    <param name="config/emm__skip_step"                value="1"/>
    <param name="config/emm__mark_outliers"            value="true"/>

    <param name="config/depth_camera_fx"               value="939.326"/>
    <param name="config/depth_camera_fy"               value="939.095"/>
    <param name="config/depth_camera_cx"               value="625.429"/>
    <param name="config/depth_camera_cy"               value="350.158"/>

    <!-- tuning -->
    <param name="config/feature_detector_type"         value="FAST"/>
    <param name="config/adjuster_max_iterations"       value="100"/>
    <param name="config/feature_extractor_type"        value="SIFT"/>
    <param name="config/min_keypoints"                 value="2000"/>
    <param name="config/max_keypoints"                 value="12000"/>
    <param name="config/min_sampled_candidates"        value="5"/>
    <param name="config/predecessor_candidates"        value="5"/>
    <param name="config/neighbor_candidates"           value="5"/>
    <param name="config/maximum_depth"                 value="15"/>
    <param name="config/sigma_depth"                 value="0.02"/>

  </node>
</launch>
